{% extends "base" %}

{% block title %}Login{% endblock %}

{% block content %}

    <div class="container">
        <div class="form-container">
        <form action="#" class="form-login">
            <h2 class="text-center">Laravel Helpdesk</h2>
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" class="form-control" id="login" name="login" placeholder="enter your login" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="text" class="form-control" id="password" name="password" placeholder="enter your password" />
            </div>
            <div class="form-group">
                <a href="#login" class="btn btn-link btn-sm">Forgot your login?</a>
                <a href="#" class="btn btn-link btn-sm">Forgot your password?</a>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary btn-block">Login</button>
            </div>

        </form>
        </div>
    </div>

{% endblock %}